{
	"name": "good-php/reflection",
	"description": "Reflection API with a type system, generics support and cache",
	"license": "MIT",
	"authors": [
		{
			"name": "Alex Wells (Oleksandr Prypkhan)",
			"email": "autaut03@gmail.com"
		}
	],
	"require": {
		"php": ">=8.1",
		"tenantcloud/php-standard": "^2.0",
		"symfony/var-exporter": "^6.0",
		"phpstan/phpdoc-parser": "^1.6.4",
		"illuminate/container": "^9.17"
	},
	"require-dev": {
		"pestphp/pest": "^1.21",
		"php-cs-fixer/shim": "~3.8.0",
		"phpstan/phpstan": "~1.7.0",
		"phake/phake": "^4.2",
		"phpstan/phpstan-webmozart-assert": "^1.2"
	},
	"autoload": {
		"psr-0": {
			"": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "./vendor/bin/pest",
		"cs-fix": "./vendor/bin/php-cs-fixer fix -v --show-progress=dots",
		"phpstan":  "./vendor/bin/phpstan analyse"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"pestphp/pest-plugin": true
		}
	}
}
